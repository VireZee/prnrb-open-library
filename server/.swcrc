{
    "$schema": "https://swc.rs/schema.json",
    "jsc": {
        "parser": {
            "syntax": "typescript",
            "jsx": false,
            "dynamicImport": true,
            "privateMethod": false,
            "functionBind": false,
            "exportDefaultFrom": false,
            "exportNamespaceFrom": false,
            "decorators": true,
            "decoratorsBeforeExport": false,
            "topLevelAwait": false,
            "importMeta": false
        },
        "transform": {
            "legacyDecorator": true,
            "decoratorMetadata": true
        },
        "target": "esnext",
        "loose": false,
        "externalHelpers": false,
        "keepClassNames": true,
        "baseUrl": "./src",
        "paths": {
            "@database/*": ["database/*"],
            "@modules/*": ["modules/*"],
            "@common/*": ["common/*"],
            "@shared/*": ["shared/*"],
            "@type/*": ["types/*"]
        }
    },
    "module": {
        "type": "es6"
    },
    "minify": false
}