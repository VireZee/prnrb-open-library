{
    "$schema": "https://json.schemastore.org/nest-cli",
    "collection": "@nestjs/schematics",
    "sourceRoot": "src",
    "compilerOptions": {
        "deleteOutDir": true,
        "builder": "swc",
        "typeCheck": true,
        "assets": [
            {
                "include": "src/infrastructure/email/templates/**/*",
                "outDir": "dist/infrastructure/email/templates"
            }
        ]
    }
}