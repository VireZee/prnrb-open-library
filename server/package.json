{
    "name": "prnrb-open-library",
    "description": "An Open Library System powered by the PRNRB Stack",
    "author": "Zee",
    "private": true,
    "type": "module",
    "scripts": {
        "build": "nest build",
        "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
        "start": "nest start",
        "start:dev": "nest start --watch -b swc",
        "start:debug": "nest start --debug --watch",
        "start:prod": "node dist/main",
        "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix"
    },
    "dependencies": {
        "@as-integrations/express5": "^1.1.2",
        "@nestjs-modules/mailer": "^2.0.2",
        "@nestjs/apollo": "^13.2.3",
        "@nestjs/common": "^11.1.10",
        "@nestjs/config": "^4.0.2",
        "@nestjs/core": "^11.1.10",
        "@nestjs/graphql": "^13.2.3",
        "@nestjs/passport": "^11.0.5",
        "@nestjs/platform-express": "^11.1.10",
        "@prisma/adapter-pg": "^7.2.0",
        "@prisma/client": "^7.2.0",
        "argon2": "^0.44.0",
        "cookie-parser": "^1.4.7",
        "got": "^14.6.5",
        "handlebars": "^4.7.8",
        "nodemailer": "^7.0.12",
        "passport": "^0.7.0",
        "passport-custom": "^1.1.1",
        "passport-google-oauth20": "^2.0.0",
        "redis": "^5.10.0",
        "reflect-metadata": "^0.2.2",
        "rxjs": "^7.8.2"
    },
    "devDependencies": {
        "@eslint/eslintrc": "^3.3.3",
        "@eslint/js": "^9.39.2",
        "@nestjs/cli": "^11.0.14",
        "@nestjs/schematics": "^11.0.9",
        "@nestjs/testing": "^11.1.10",
        "@swc/cli": "^0.7.9",
        "@swc/core": "^1.15.7",
        "@types/cookie-parser": "^1.4.10",
        "@types/express": "^5.0.6",
        "@types/jest": "^30.0.0",
        "@types/node": "^25.0.3",
        "@types/nodemailer": "^7.0.4",
        "@types/passport-jwt": "^4.0.1",
        "@types/supertest": "^6.0.3",
        "globals": "^16.5.0",
        "jest": "^30.2.0",
        "prisma": "^7.2.0",
        "source-map-support": "^0.5.21",
        "supertest": "^7.1.4",
        "ts-jest": "^29.4.6",
        "ts-loader": "^9.5.4",
        "ts-node": "^10.9.2",
        "tsconfig-paths": "^4.2.0",
        "typescript": "^5.9.3",
        "typescript-eslint": "^8.50.1"
    },
    "jest": {
        "moduleFileExtensions": [
            "js",
            "json",
            "ts"
        ],
        "rootDir": "src",
        "testRegex": ".*\\.spec\\.ts$",
        "transform": {
            "^.+\\.(t|j)s$": "ts-jest"
        },
        "collectCoverageFrom": [
            "**/*.(t|j)s"
        ],
        "coverageDirectory": "../coverage",
        "testEnvironment": "node"
    }
}